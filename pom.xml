    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <kotlin.version>1.3.0</kotlin.version>
        <javax.inject.version>1</javax.inject.version>
        <spring-boot.version>2.0.6.RELEASE</spring-boot.version>
        <jose4j.version>0.5.0</jose4j.version>
        <logstash-logback-encoder.version>4.10</logstash-logback-encoder.version>
        <prometheus.version>0.3.0</prometheus.version>
        <micrometer-registry-prometheus.version>1.0.6</micrometer-registry-prometheus.version>
        <junit.version>4.12</junit.version>
        <mockito-all.version>2.15.0</mockito-all.version>
        <assertj-core.version>3.6.2</assertj-core.version>
        <cxf.version>3.2.0</cxf.version>
        <tjenestespesifikasjoner.version>1.2020.01.20-15.44-063ae9f84815</tjenestespesifikasjoner.version>
        <bom.version>2018.10.23.14.04</bom.version>
        <person.version>3.2.0</person.version>
        <aktoer.version>1.0</aktoer.version>
